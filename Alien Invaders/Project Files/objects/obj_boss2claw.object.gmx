x = obj_boss2.x - 50; 
y = obj_boss2.y
    
//If HP &lt;= 0, then create explosion object and destroy self
if hp &lt;= 0
    {
    instance_create(x, y, obj_explosion); 
    instance_destroy();
    }  
    
//if the back variable is ture, then rotate the image so the arm moves backwards,
//then, once the angle reach 250, set back to false so it will start to move forward    
if back
    {
    image_angle -= 2;
    
    if image_angle &lt;= 250
        {
        back = false; 
        //When angle is &lt;= 250, create an asteroid object, and set movement towards ship
        tossed = instance_create(x - 67, y - 16, obj_asteroid);
        
        with (tossed)
            {
            move_towards_point(obj_ship.x, obj_ship.y, 10); 
            }
        //play the servo sound
        audio_play_sound(snd_mining_boss_servo, 1, false);    
            
        } 
    }

//if back is false, then the arm needs to move forward, so set angle to +5. 
//Once is reaches 360, it will need to start moving back again    
if !back
    {
    image_angle +=12; 
    
    if image_angle &gt;= 360
        {
        back = true;
        audio_play_sound(snd_mining_boss_servo2, 1, false);  
        }
    }
    


    



